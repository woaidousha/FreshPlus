<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="left|center_vertical"
              android:paddingLeft="@dimen/message_header_padding_left_right"
              android:paddingRight="@dimen/message_header_padding_left_right"
              android:paddingTop="@dimen/message_header_padding_top_bottom"
              android:paddingBottom="@dimen/message_header_padding_top_bottom"
              android:background="@color/message_header_bg">
    <ImageView
        android:id="@+id/message_header_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"/>
    <TextView
        android:id="@+id/message_header_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:layout_marginLeft="@dimen/message_header_label_margin_left"
        android:textColor="@color/message_item_text_color"
        android:textSize="@dimen/message_item_text_size"
        android:text="@string/app_name"/>
</LinearLayout>