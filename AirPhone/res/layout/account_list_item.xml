<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/account_list_label"
            style="@style/AccountInfoItemLabel"
            android:text="@string/address_label"/>
        <TextView
            style="@style/AccountInfoItemContent"
            android:id="@+id/account_list_content"
            android:clickable="false"
            android:focusable="false"
            android:layout_toRightOf="@null"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/account_list_item_label_margin_left_right"
            android:singleLine="true"
            android:text="@string/address_label"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/account_list_divide"/>
</LinearLayout>