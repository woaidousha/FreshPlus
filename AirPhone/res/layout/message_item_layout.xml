<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="center_vertical|left"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/message_item_padding_left_right"
              android:paddingRight="@dimen/message_item_padding_left_right"
              android:paddingTop="@dimen/message_item_padding_top_bottom"
              android:paddingBottom="@dimen/message_item_padding_top_bottom"
              android:background="@color/message_item_bg">

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:textColor="@color/message_item_text_color"
        android:textSize="@dimen/message_item_text_size"
        android:text="@string/feedback_edittext_hint"/>

    <TextView
        android:id="@+id/message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:layout_marginTop="@dimen/message_item_date_margin_top"
        android:textColor="@color/message_item_text_color"
        android:textSize="@dimen/message_item_text_size"
        android:text="@string/app_name"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_list_divide"/>
</LinearLayout>